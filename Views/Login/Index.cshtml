@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>FarmaFast Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/VistaMuestra/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmaFast.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body class="cont">

<form asp-controller="Login" asp-action="Index" method="post">

    <div class="box bg-white p-5 rounded-5 " style="box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px, rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;">
        <div class="d-flex justify-content-center">
            <img src="/img/nuevoo.png" alt="login-icon" style="height: 7rem" />
        </div>
        <div class="farma text-center fs-1 fw-bold">FarmaFast</div>
        <div class="input-group mt-4">
            <input class="form-control" name="correo" type="email" id="email" placeholder="Email@ejemplo.com" required />
        </div>
        <div class="input-group mt-3">
            <input class="form-control" name="clave" type="password" placeholder="Contraseña" required />
        </div>

        <div class="">
            <div class="d-flex align-items-center gap-1 mt-2">
                <input class="form-check-input" type="checkbox" />
                <div class="pt-1" style="font-size:0.9rem ;">Recuerdame</div>
            </div>
        </div>
        <button type="submit" class="btn w-100"> Ingresar </button>
        <div class="form-group mt-2 ">
            <a href="" class="ff text-decoration-none fw-semibold ">Olvidaste tu Contraseña?</a>
        </div>
        <div>
        </div>

    </div>

</form>

<!-- //////////////////////////////////////// -->

    @if (ViewData["Mensaje"] != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div id="headerNoti" class="toast-header bg-info text-white">
                    <i class="bi bi-capsule-pill"></i>
                    <strong class="me-auto">&nbsp;FarmaFast</strong>
                    <small>@DateTime.Now</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @TempData["Mensaje"]
                    La contraseña o el email son incorrectos.
                </div>
            </div>
        </div>
    }

<!-- //////////////////////////////////////// -->

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>